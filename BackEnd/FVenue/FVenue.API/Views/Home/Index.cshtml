@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Home Page";
}

<section class="content">
    <div class="container-fluid" style="margin-top: 5px;">
        <div class="row">
            <!--<div class="col-lg-3 col-6">-->
            <!-- Small Box -->
            <!--<div class="small-box bg-info">
                <div class="inner">
                    <h3>150</h3>
                    <p>New Orders</p>
                </div>
                <div class="icon">
                    <i class="ion ion-bag"></i>
                </div>
                <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>-->
            <!-- End Small Box -->
            <!--</div>-->
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>53<sup style="font-size: 20px">%</sup></h3>
                        <p>Bounce Rate</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>44</h3>
                        <p>User Registrations</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>65</h3>
                        <p>Unique Visitors</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@ViewBag.NewRegistrantInSevenDays</h3>
                        <p>Người Đăng Kí Trong 7 Ngày</p>
                    </div>
                    <div class="icon">
                        <i class="fa-solid fa-user-secret"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
        <div class="row">
            <section class="col-lg-7 connectedSortable ui-sortable">
                <!-- Yêu Cầu Về Phân Loại Phụ -->
                <div class="card">
                    @{
                        SubCategoryRequestPaginationModel subCategoryRequestPaginationModel = ViewBag.SubCategoryRequestPaginationModel;
                    }
                    <!-- Card Header -->
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="ion ion-clipboard mr-1"></i> Yêu Cầu Về Phân Loại Phụ
                        </h3>
                        <!-- Phân Trang -->
                        <div class="card-tools">
                            <ul class="pagination pagination-sm">
                                <li class="page-item"><a href="#" class="page-link">&laquo;</a></li>
                                @for (int i = subCategoryRequestPaginationModel.FirstPage; i < subCategoryRequestPaginationModel.PaginationPage + subCategoryRequestPaginationModel.FirstPage; i++)
                                {
                                    <li class="page-item"><a href="#" class="page-link">@i</a></li>
                                }
                                <li class="page-item"><a href="#" class="page-link">&raquo;</a></li>
                            </ul>
                        </div>
                    </div>
                    <!-- End Card Header -->
                    <!-- Card Body -->
                    <div class="card-body">
                        <ul class="todo-list" data-widget="todo-list">
                            @foreach (var subCategoryRequest in subCategoryRequestPaginationModel.SubCategoryRequestDTOs)
                            {
                                <li>
                                    <!-- Checkbox -->
                                    <div class="icheck-primary d-inline ml-2">
                                        <input id="@("subCategoryRequest" + @subCategoryRequest.Id)" type="checkbox" value="@subCategoryRequest.Id">
                                        <label for="@("subCategoryRequest" + @subCategoryRequest.Id)"></label>
                                    </div>
                                    <!-- Request -->
                                    <span class="text">@subCategoryRequest.RequestUserName đã yêu cầu thêm <u>@subCategoryRequest.Name</u> vào @subCategoryRequest.CategoryName</span>
                                    <!-- Emphasis Label -->
                                    <small class="badge @subCategoryRequest.Badge.Key"><i class="far fa-clock"></i> @subCategoryRequest.Badge.Value</small>
                                </li>
                            }
                        </ul>
                    </div>
                    <!-- End Cart Body -->
                    <div class="card-footer clearfix">
                        <button id="subCategoryRequestRejected" type="button" class="btn btn-danger float-right" style="margin-left: 5px;"><i class="fa-solid fa-ban"></i> Từ Chối</button>
                        <button id="subCategoryRequestApproved" type="button" class="btn btn-primary float-right"><i class="fa-solid fa-plus"></i> Xác Nhận</button>
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>
