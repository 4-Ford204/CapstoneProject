@model BusinessObjects.Models.Venue

<div class="modal show display-popup" id="myModal" role="dialog" style="font-size: 14px">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Venues" asp-action="Insert" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h4 style="font-size: 25px;" class="modal-title">Venue</h4>
                </div>
                <div class="modal-body" style="">
                    <div class="row">
                        <div class="col-md-12">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Name" control-label"></label>
                                <input asp-for="Name" class="form-control" value="@ViewBag.UserID" readonly />
                            </div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Status" />
                                    @Html.DisplayNameFor(model => model.Status)
                                </label>
                            </div>
                            <div class="form-group">
                                <label asp-for="Status" class="control-label"></label>
                                <select asp-for="Status" class="form-control" asp-items="ViewBag.CategoryID"></select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input style="font-size: 14px" type="submit" value="Save" class="btn btn-primary" />
                    <button style="font-size: 14px" id="removePopup" type="button" class="btn btn-secondary">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>
